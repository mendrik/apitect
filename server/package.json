{
  "name": "apitect-ui",
  "version": "0.1.0",
  "private": true,
  "author": "Andreas Herd",
  "description": "Backend for Apitect",
  "repository": "https://github.com/mendrik/apitect",
  "license": "MIT",
  "scripts": {
    "deploy": "",
    "database": "docker-compose up",
    "start": "nodemon",
    "test": "jest",
    "validate": "tsc --noEmit --skipLibCheck",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "lint": "eslint --fix src/**/*.{ts,tsx}",
    "upgrade": "npx npm-check-updates -u & npm i"
  },
  "dependencies": {
    "@fastify/cors": "8.1.0",
    "@fastify/websocket": "7.0.1",
    "ansicolor": "1.1.100",
    "bcryptjs": "2.4.3",
    "date-fns": "2.29.3",
    "dotenv": "16.0.2",
    "effector": "22.3.0",
    "fastify": "4.6.0",
    "i18next": "21.9.2",
    "jsonwebtoken": "8.5.1",
    "mongodb": "4.10.0",
    "ramda": "0.28.0",
    "ramda-adjunct": "3.3.0",
    "sherlockjs": "1.4.2",
    "shrink-json": "0.2.1",
    "uuid": "9.0.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@jest/reporters": "^29.0.3",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/bcryptjs": "2.4.2",
    "@types/history": "5.0.0",
    "@types/jest": "29.0.3",
    "@types/jsonwebtoken": "8.5.9",
    "@types/node": "18.7.18",
    "@types/ramda": "0.28.15",
    "@types/uuid": "8.3.4",
    "@types/ws": "8.5.3",
    "@typescript-eslint/parser": "5.38.0",
    "esbuild": "0.15.9",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-effector": "0.10.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "jest": "29.0.3",
    "mongodb-memory-server": "8.9.2",
    "nodemon": "2.0.20",
    "prettier": "2.7.1",
    "source-map-explorer": "2.5.2",
    "ts-jest": "29.0.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.3"
  },
  "jest": {
    "verbose": false,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "~shared/(.*)": "<rootDir>/../frontend/src/shared/$1"
    },
    "globals": {
      "tsconfig": "tsconfig.json"
    }
  }
}
