{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ESNext",
    "types": ["vite/client", "vite-plugin-svgr/client"],
    "paths": {
      "~shared/*": ["shared/*"],
      "~forms/*": ["components/forms/*"],
      "~hooks/*": ["hooks/*"],
      "~stores/*": ["stores/*"],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
